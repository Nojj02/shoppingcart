FROM microsoft/dotnet:2.1.503-sdk AS build

WORKDIR /app
COPY ./src .

WORKDIR /app/ShoppingCart.Api
RUN dotnet publish -c Release -o /publish

FROM microsoft/dotnet:2.1.7-aspnetcore-runtime AS runtime
COPY --from=build /publish /app

EXPOSE 9050

WORKDIR /app
ENTRYPOINT ["dotnet", "ShoppingCart.Api.dll" ]
